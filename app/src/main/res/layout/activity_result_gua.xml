<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/result_bg"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:id="@+id/page_result"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_1"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--成卦时间-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_cg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成卦"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_currenttime" />
                <TextView
                    android:id="@+id/tv_currenttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1990-1-1 00:00"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <!--单卦属性-->
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="9sp"
                        android:text=" " />

                    <TextView
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="单卦" />

                    <TextView
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="五行" />

                    <TextView
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="易数" />

                    <TextView
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="方位" />

                </LinearLayout>
                <!--本上-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:background="@color/gray"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="【本上】"
                        android:textColor="@color/mention"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_benshang_g"
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="乾" />

                    <TextView
                        android:id="@+id/tv_benshang_wuxing"
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="金" />

                    <TextView
                        android:id="@+id/tv_benshang_yishu"
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1,6" />

                    <TextView
                        android:id="@+id/tv_benshang_fangwei"
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="西北" />
                </LinearLayout>
                <!--本下-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:background="@color/gray"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="【本下】"
                        android:textColor="@color/mention"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_benxia_g"
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="乾" />

                    <TextView
                        android:id="@+id/tv_benxia_wuxing"
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="金" />

                    <TextView
                        android:id="@+id/tv_benxia_yishu"
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1,6" />

                    <TextView
                        android:id="@+id/tv_benxia_fangwei"
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="西北" />
                </LinearLayout>
                <!--互上-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:background="@color/gray"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="【互上】"
                        android:textColor="@color/mention"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_hushang_g"
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="乾" />

                    <TextView
                        android:id="@+id/tv_hushang_wuxing"
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="金" />

                    <TextView
                        android:id="@+id/tv_hushang_yishu"
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1,6" />

                    <TextView
                        android:id="@+id/tv_hushang_fangwei"
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="西北" />
                </LinearLayout>
                <!--互下-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:background="@color/gray"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="【互下】"
                        android:textColor="@color/mention"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_huxia_g"
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="乾" />

                    <TextView
                        android:id="@+id/tv_huxia_wuxing"
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="金" />

                    <TextView
                        android:id="@+id/tv_huxia_yishu"
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1,6" />

                    <TextView
                        android:id="@+id/tv_huxia_fangwei"
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="西北" />
                </LinearLayout>
                <!--变上-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:background="@color/gray"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="【变上】"
                        android:textColor="@color/mention"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_bianshang_g"
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="乾" />

                    <TextView
                        android:id="@+id/tv_bianshang_wuxing"
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="金" />

                    <TextView
                        android:id="@+id/tv_bianshang_yishu"
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1,6" />

                    <TextView
                        android:id="@+id/tv_bianshang_fangwei"
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="西北" />
                </LinearLayout>
                <!--变下-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/gray"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="【变下】"
                        android:textColor="@color/mention"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_bianxia_g"
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="乾" />

                    <TextView
                        android:id="@+id/tv_bianxia_wuxing"
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="金" />

                    <TextView
                        android:id="@+id/tv_bianxia_yishu"
                        style="@style/mentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1,6" />

                    <TextView
                        android:id="@+id/tv_bianxia_fangwei"
                        style="@style/dmentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="西北" />
                </LinearLayout>



            </LinearLayout>

            <!--卦名卦象-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:tag="0"
                    android:id="@+id/ben"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="【本卦】"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ben_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="乾為天"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/normal_result" />

                    <ImageView
                        android:id="@+id/ben_shang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/qian1" />

                    <ImageView
                        android:id="@+id/ben_xia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/qian1" />
                </LinearLayout>

                <LinearLayout
                    android:tag="1"
                    android:id="@+id/hu"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="【互卦】"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/hu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="乾為天"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/normal_result" />

                    <ImageView
                        android:id="@+id/hu_shang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/qian1" />

                    <ImageView
                        android:id="@+id/hu_xia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/qian1" />
                </LinearLayout>

                <LinearLayout
                    android:tag="2"
                    android:id="@+id/bian"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="【变卦】"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bian_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="天風姤"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/normal_result" />

                    <ImageView
                        android:id="@+id/bian_shang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/qian1" />

                    <ImageView
                        android:id="@+id/bian_xia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/xun5" />
                </LinearLayout>
            </LinearLayout>

            <!--卦辞爻辞详细-->
            <FrameLayout
                android:id="@+id/framelayout"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>